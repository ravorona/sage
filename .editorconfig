# Editor config for contributors
# http://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{.stylelintrc, .eslintrc}]
indent_size = 2

[package.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
