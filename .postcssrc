{
    "ident": "postcss",
    "sourceMap": true,
    "plugins": {
        "@fullhuman/postcss-purgecss": {
            "content": [
                "resources/**/*.blade.php",
                "resources/**/*.vue",
                "resources/**/*.ts",
                "resources/**/*.js"
            ]
        },
        "autoprefixer":  {},
        "postcss-custom-selectors": {},
        "postcss-custom-media": {},
        "postcss-inline-svg": {
            "paths": [ "./svg" ],
            "removeStroke": true,
            "removeFill": true
        },
        "postcss-selector-matches": {},
        "postcss-css-variables": {},
        "postcss-calc": {
            "precision": 2
        },
        "postcss-reporter": {
            "clearAllMessages": true
        }
    }
}
