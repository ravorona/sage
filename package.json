{
    "name": "@ravorona/sage",
    "version": "3.2.0",
    "description": "Wordpress theme based on Sage starter theme using Vite",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "lint:js": "eslint --ext .js,.ts .",
        "lint:css": "stylelint **/*.{scss,css}",
        "lint": "yarn lint:js && yarn lint:css",
        "translate": "yarn translate:pot && yarn translate:js",
        "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
        "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
    },
    "devDependencies": {
        "@ravorona/eslint-config-typescript": "^4.2.0",
        "@ravorona/stylelint-config": "^2.2.1",
        "@types/node": "^17.0.21",
        "autoprefixer": "^10.4.10",
        "dotenv": "^16.0.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "postcss-custom-media": "^8.0.2",
        "postcss-inline-svg": "^5.0.0",
        "postcss-scss": "^4.0.4",
        "prettier": "^2.5.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-output-manifest": "^2.0.0",
        "sass": "^1.54.9",
        "stylelint": "^14.11.0",
        "stylelint-config-recommended-scss": "^7.0.0",
        "stylelint-config-standard": "^28.0.0",
        "typescript": "^4.5.5",
        "vite": "^3.1.0"
    },
    "dependencies": {}
}
