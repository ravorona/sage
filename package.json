{
  "name": "@ravorona/sage",
  "version": "4.2.0",
  "description": "Wordpress theme based on Sage starter theme using Vite",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint:js": "eslint --ext .js,.ts .",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint": "yarn lint:js && yarn lint:css",
    "translate": "yarn translate:pot && yarn translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "@ravorona/eslint-config-typescript": "^4.4.2",
    "@ravorona/stylelint-config": "^2.2.6",
    "@types/node": "^18.16.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss-custom-media": "^9.1.3",
    "postcss-inline-svg": "^6.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-output-manifest": "^2.0.0",
    "sass": "^1.62.0",
    "stylelint": "^15.6.0",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.2"
  },
  "dependencies": {}
}
